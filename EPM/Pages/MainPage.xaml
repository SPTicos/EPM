<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="EPM.MainPage">
	<ContentPage.Padding>
    	<OnPlatform x:TypeArguments="Thickness" iOS="0, -20, 0, 0"/>
  	</ContentPage.Padding>
	<Grid.Padding>
		<OnPlatform x:TypeArguments="Thickness" Android="30, 0, 0, 0"/>
  	</Grid.Padding>
	<ContentPage.Content>

	<AbsoluteLayout BackgroundColor="White" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
		<BoxView Color="#FF5722" AbsoluteLayout.LayoutBounds="0, 0 ,1,0.4" AbsoluteLayout.LayoutFlags="All"></BoxView>
		<Grid AbsoluteLayout.LayoutBounds="0.5, 1 ,1,0.7" AbsoluteLayout.LayoutFlags="All" >
	      <TableView  x:Name="tblOptions">
	        <TableView.Root>
	          <TableSection Title=" " x:Name="mainTableSection">
	          	
            </TableSection>
	       </TableView.Root>
	      </TableView>
	    </Grid>
	    <Image Source="user.png" 
	    AbsoluteLayout.LayoutBounds="0.5,0.17,0.20,0.15" 
	    AbsoluteLayout.LayoutFlags="All"  
	    HorizontalOptions="FillAndExpand" 
	    VerticalOptions="FillAndExpand"/>
	</AbsoluteLayout>
  </ContentPage.Content>
</ContentPage>

