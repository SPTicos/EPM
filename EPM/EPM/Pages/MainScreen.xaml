<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
x:Class="EPM.MainScreen">

<ContentPage.Padding>
    <OnPlatform x:TypeArguments="Thickness"
                iOS="0, 20, 0, 0" />
</ContentPage.Padding>

	<ContentPage.Content>
    <Grid>
      <TableView>
        <TableView.Root>
          <TableSection Title="Submit Request">
            <ImageCell ImageSource="Event.png" DetailColor="Gray" Text="Item A" Detail = "Description A"></ImageCell>
            <ImageCell ImageSource="Schedule.png" DetailColor="Gray" Text="Item B" Detail = "Description B"></ImageCell>
            <ImageCell ImageSource="Favorites.png" DetailColor="Gray" Text="Item C" Detail = "Description C" ></ImageCell>
            <ImageCell ImageSource="MapIcon.png" DetailColor="Gray" Text="Item D" Detail = "Description D" ></ImageCell>
          </TableSection>
          <TableSection Title="View Request">
            <ImageCell ImageSource="Sponsors.png" DetailColor="Gray" Text="Item E" Detail = "Description E" ></ImageCell>
            <ImageCell ImageSource="Developers.png" DetailColor="Gray" Text="Item F" Detail = "Description F"></ImageCell>
          </TableSection>
        </TableView.Root>
      </TableView>
    </Grid>
  </ContentPage.Content>

</ContentPage>
